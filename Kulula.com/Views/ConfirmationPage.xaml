                                <Label Text="Booking summary"  FontAttributes="Bold" FontSize="18" TextColor="Black"/>
                            </StackLayout>
                            <Label Text=" "/>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Fares:" FontAttributes="Bold" FontSize="12"/>
                                <Label x:Name="Fares" FontSize="12"/>
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="Total Amount:" FontAttributes="Bold" FontSize="12"/>
                                <Label x:Name="TotalAmount" FontSize="12"/>
                            </StackLayout>

                            <Button Text="Confirm" BackgroundColor="#00838f" BorderColor="#004d40" WidthRequest="5" HeightRequest="30"  TextColor="OldLace" Clicked="Button_Clicked"/>
